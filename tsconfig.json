{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true
  }
}
