{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "outDir": "./dist/cjs",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true
  }
}
